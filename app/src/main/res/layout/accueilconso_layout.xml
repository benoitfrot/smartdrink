<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/pie_chart_icon"
        android:id="@+id/pie_chart_icon"

        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView"
        android:textColor="@color/black"
        android:text="Historique\n Consommation"
        android:layout_marginLeft="75dp"
        android:layout_marginStart="75dp"
        android:layout_alignTop="@+id/pie_chart_icon"
        android:layout_toRightOf="@+id/pie_chart_icon"
        android:layout_toEndOf="@+id/pie_chart_icon"
        android:layout_marginTop="14dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        android:id="@+id/bar"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/pie_chart_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
